{
  "compilerOptions": {
    "target": "es2016",
    // "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    // "module": "ES2020",
    // "ts-node": {
    //   "esm": true
    // },
    "outDir": "/dist",
    "rootDir": "/src",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
